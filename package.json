    "format": "npm run prettier -- --write"
  },
  "devDependencies": {
    "@nayhoo/eslint-config": "workspace:*",
    "doctoc": "~2.2.0",
    "eslint": "~8.48.0",
    "eslint-plugin-import": "~2.28.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "~5.3.3"
  }
